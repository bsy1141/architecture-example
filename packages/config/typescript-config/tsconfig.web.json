{
    "extends": "./base.json",
    "compilerOptions": {
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "jsx": "react-jsx",
        "types": ["vite/client"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@shared/*": ["./src/shared/*"]
        }
    }
}
